{
  "openapi": "3.0.4",
  "info": {
    "title": "SubastaService.Api",
    "version": "v1"
  },
  "paths": {
    "/api/Subastas": {
      "post": {
        "tags": [
          "Subastas"
        ],
        "summary": "Crea una nueva subasta.",
        "requestBody": {
          "description": "Datos de la subasta a crear.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAuctionCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAuctionCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAuctionCommand"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Subasta creada exitosamente.",
            "content": {
              "text/plain": {
                "schema": { }
              },
              "application/json": {
                "schema": { }
              },
              "text/json": {
                "schema": { }
              }
            }
          },
          "400": {
            "description": "Datos inválidos o incompletos.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Subastas"
        ],
        "summary": "Obtiene la lista de todas las subastas.",
        "description": "Retorna todas las subastas registradas desde la base de datos de lectura (MongoDB).\r\nNo requiere parámetros de entrada.",
        "responses": {
          "200": {
            "description": "Lista de subastas obtenida exitosamente."
          },
          "500": {
            "description": "Error interno del servidor."
          }
        }
      }
    },
    "/api/Subastas/{id}": {
      "get": {
        "tags": [
          "Subastas"
        ],
        "summary": "Obtiene una subasta por su ID (placeholder temporal).",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID de la subasta.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Subasta encontrada (placeholder)."
          }
        }
      }
    },
    "/api/Subastas/editar": {
      "put": {
        "tags": [
          "Subastas"
        ],
        "summary": "Edita los datos de una subasta existente.",
        "requestBody": {
          "description": "Datos actualizados de la subasta.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EditarSubastaCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/EditarSubastaCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/EditarSubastaCommand"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Subasta editada exitosamente."
          }
        }
      }
    },
    "/api/Subastas/eliminar/{id}": {
      "delete": {
        "tags": [
          "Subastas"
        ],
        "summary": "Elimina una subasta por su ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID de la subasta a eliminar.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "usuarioId",
            "in": "query",
            "description": "ID del usuario que solicita la eliminación.",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Subasta eliminada exitosamente."
          },
          "404": {
            "description": "Subasta no encontrada.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Subastas/buscar/{id}": {
      "get": {
        "tags": [
          "Subastas"
        ],
        "summary": "Consulta una subasta por su ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID de la subasta a consultar.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Subasta encontrada.",
            "content": {
              "text/plain": {
                "schema": { }
              },
              "application/json": {
                "schema": { }
              },
              "text/json": {
                "schema": { }
              }
            }
          },
          "404": {
            "description": "Subasta no encontrada.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/WeatherForecast": {
      "get": {
        "tags": [
          "WeatherForecast"
        ],
        "operationId": "GetWeatherForecast",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
